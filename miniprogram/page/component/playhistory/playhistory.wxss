@import '../../common/common.wxss';

.banner image {
  width: 100%;
  height: 400rpx;
}

.main {
  text-align: center;
}

.list-box {
  padding: 30rpx 20rpx;
  text-align: left;
}

.newest-list {
  display: inline-block;
  width: 215rpx;
  height: 310rpx;
  text-align: center;
  margin: 0 20rpx 20rpx 0;
  font-size: 24rpx;
}

.newest-list:nth-child(2n) {
  margin-right: 0;
}

.newest-list image {
  width: 180rpx;
  height: 220rpx;
  margin: 30rpx 0 20rpx;
}

.newest-list .newest-text {
  width: 80px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-align: tenter;
  position: absolute;
}
